<% if @error %>
  <div class="alert alert-danger" role="alert">
    Email and password are mandatory.
  </div>
<% end %>

<form action="/lists/<%= params[:list_name] %>/<%= params[:user_uuid] %>" method="post">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">Name</label>

    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="name" autofocus="autofocus" value="<%= params[:name] %>">
    </div>
  </div>

  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">Email</label>

    <div class="col-sm-10">
      <input type="text" class="form-control" id="email" name="email" value="<%= params[:email] %>">
    </div>
  </div>

  <div class="form-group row">
    <label for="password" class="col-sm-2 col-form-label">Password</label>

    <div class="col-sm-10">
      <input type="password" class="form-control" id="password" name="password">
    </div>
  </div>

  <button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>
